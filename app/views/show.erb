<h1><%= @post.id%>. <%= @post.name %></h1>
<p><%= @post.content%></p><br>
<ul>
  <li><a href="/posts/<%= @post.id %>/edit" style="color:black; text-decoration: none; font-size:12px;">Edit this post</a></li>
  <li>
    <form action="/posts/<%= @post.id%>/delete" method="post">
      <input type="hidden" id="hidden" name="_method" value="delete">
      <input type="submit" value="Delete" style="border:none; margin:0;padding: 0;background: black; color:white;font-size:12px">
    </form>
  </li>
</ul>
